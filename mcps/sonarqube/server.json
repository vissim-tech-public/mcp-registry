{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-29/server.schema.json",
    "name": "sonar/sonarqube",
    "description": "Local SonarQube MCP Server - Container-based instance",
    "version": "1.0.0",
    "command": "podman",
    "args": [
        "run",
        "--init",
        "--pull=always",
        "-i",
        "--rm",
        "-e",
        "SONARQUBE_TOKEN",
        "-e",
        "SONARQUBE_ORG",
        "mcp/sonarqube"
    ],
    "env": {
        "SONARQUBE_TOKEN": "<token>",
        "SONARQUBE_ORG": "<org>"
    }
}